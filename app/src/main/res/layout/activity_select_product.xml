<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="androidx.lifecycle.LiveData"/>

        <import type="id.langgan.android.seller.data.vo.Resource"/>

        <import type="java.util.List"/>

        <import type="id.langgan.android.seller.model.Product"/>

        <import type="id.langgan.android.seller.data.vo.Status"/>

        <variable
                name="products"
                type="LiveData&lt;Resource&lt;List&lt;Product>>>"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.activity.SelectProductActivity">

        <LinearLayout
                android:id="@+id/action_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

            <ImageView
                    android:src="@drawable/ic_arrow_left"
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            <EditText
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:hint="Search product"
                    android:textAppearance="@style/TextAppearance.Regular13"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/ic_close"
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@id/action_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <View
                app:layout_constraintTop_toBottomOf="@id/action_bar"
                android:background="@drawable/shape_gradient_bottom_shadow"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>